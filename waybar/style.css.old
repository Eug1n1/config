* {
    font-family: monospace; 
    /* font-weight: bold; */
    font-size: 12pt;
    color: #c9c9c9;
}

window#waybar {
    background-color: #1c1c1c;
    transition-property: background-color;
    transition-duration: .5s;
}

window#waybar.hidden {
    opacity: 0.2;
}

window#waybar.termite {
    background-color: #3F3F3F;
}

window#waybar.chromium {
    background-color: #000000;
    border: none;
}

#workspaces button {
    padding: 0 5px;
    border: none;
    color: #c9c9c9;
    border-radius: 0;
}

/* https://github.com/Alexays/Waybar/wiki/FAQ#the-workspace-buttons-have-a-strange-hover-effect */
#workspaces button:hover {
    color: #a89984;
}

#workspaces button.focused {
    color: #d79921;
}

#workspaces button.urgent {
    animation-name: workspace_blink;
    animation-duration: 0.7s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}


@keyframes workspace_blink {
    to {    
        background-color: #cc241d;
        box-shadow: inset 0 -3px #fb4934;
    }
}

#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#custom-media,
#tray,
#mode,
#idle_inhibitor,
#mpd,
#battery {
    padding: 0 10px;
}

#window,
#workspaces {
    margin: 0 4px;
}

/* If workspaces is the leftmost module, omit left margin */
.modules-left > widget:first-child > #workspaces {
    margin-left: 0;
}

/* If workspaces is the rightmost module, omit right margin */
.modules-right > widget:last-child > #workspaces {
    margin-right: 0;
}

battery.charging {
    color: #8ec07c;
}

#battery.plugged,  #battery.not-charging, #battery.discharging{
    color: #98971a;
}

@keyframes battery_blink {
    to {
        background-color: #cc241d;
        box-shadow: inset 0 -3px #fb4934;
        color: #ebdbb2;
    }
}


#battery.warning, #battery.plugged.warning {
    color: #d79921;
}

#battery.critical, #battery.plugged.critical {
    color: #cc241d;
}

#battery.critical:not(.charging), #battery.discharging.critical {
    animation-name: battery_blink;
    animation-duration: 0.8s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

#network.disconnected {
    color: #cc241d;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: #eb4d4b;
}

#language {
    padding: 0 5px;
    margin: 0 5px;
    min-width: 16px;
}
